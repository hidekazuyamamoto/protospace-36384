<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @user.occupation %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @user.position %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんのプロトタイプ"%>
      </h2>
      <div class="user__card">
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
        <% @prototypes.each do |prototypes| %>
        <div class = "card">
          <%= link_to (image_tag prototypes.image, class: :card__img), root_path %>
          <div class = "card__body">
            <%= link_to prototypes.title, root_path, class: :card__title%>
            <p class = "card__summary">
              <%= prototypes.catch_copy %>
            </p>
            <%= link_to "by #{prototypes.user.name} ", root_path, class: :card__user %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>